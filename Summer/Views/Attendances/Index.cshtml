@model IEnumerable<Summer.Models.Attendance>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("index", "Attendances", FormMethod.Post))
{
    <div class="input-group input-group-btn">
        <div class="form-actions no-color" id="form">
            @Html.TextBox("NameSearch", null, new { @class = "form-control", @placeholder = "Student Name" })
            <input type="submit" value="Filter" class="btn  btn-primary btn-toolbar " />
        </div>
    </div>

    <div class="input-group input-group-btn">
        <div class="form-actions no-color" id="form">
            @Html.TextBox("week", null, new { @class = "form-control", @placeholder = "Week Number" })
            <input type="submit" value="Filter" class="btn  btn-primary btn-toolbar " />
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeekNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeekNumbers.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
